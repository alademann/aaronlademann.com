# WP Resolutions
<IfModule mod_rewrite.c>
RewriteEngine On

# Watch directories:
RewriteCond %{REQUEST_URI} /wp-content/portfolio-media/

RewriteRule \.(?:jpe?g|gif|png)$ wp-content/plugins/wp-resolutions/adaptive-images.php
</IfModule>
# END WP Resolutions

AddHandler php5-script .php
Options +Includes

# Expire images header
ExpiresActive On
ExpiresDefault A0
#ExpiresByType image/gif A2592000
#ExpiresByType image/png A2592000
#ExpiresByType image/jpg A2592000
#ExpiresByType image/jpeg A2592000
#ExpiresByType image/ico A2592000
ExpiresByType text/css A2592000
ExpiresByType text/javascript A2592000

FileETag none


AddType text/x-component .htc

# BEGIN DEFLATE COMPRESSION 
	AddOutputFilterByType DEFLATE text/html text/plain text/xml application/xml application/xhtml+xml text/javascript text/css application/x-javascript

# BEGIN REQUIRED FOR WEBFONTS

	AddType application/vnd.ms-fontobject .eot
	AddType application/octet-stream .otf .ttf
	AddType application/x-font-woff .woff

	<FilesMatch "\.(ttf|otf|eot|woff)$">
		<IfModule mod_headers.c>
			Header set Access-Control-Allow-Origin "*"
		</IfModule>
	</FilesMatch>

# END REQUIRED FOR WEBFONTS

# REDIRECTS
<IfModule mod_rewrite.c>
Options +FollowSymlinks
RewriteEngine On

# Redirect search query for resume automatically
RewriteCond %{QUERY_STRING} s=resume
RewriteRule (.*) resume/?src=search&q=resume [R=302,NC,L]

# Redirect search query for photography automatically
RewriteCond %{QUERY_STRING} s=photography
RewriteRule (.*) http://photos.aaronlademann.com [R=302,NC,L]
</IfModule>
# END Aaron's Redirects

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>

# END WordPress